import pepita.*
import ciudades.*
import comidas.*
import wollok.game.*

program PepitaGame {
	
//	CONFIG	
	game.title("Pepita")
	game.height(10)
	game.width(10)
	game.ground("suelo.png")

//	VISUALES
	game.addVisualIn(alpiste, game.at(5,5))
	game.addVisualIn(manzana, game.at(1,1))
	game.addVisual(ciudades.buenosAires())
	game.addVisual(ciudades.villaGesell())
	game.addVisual(pepita)

//	TECLADO
	keyboard.v().onPressDo { 
		pepita.volaHacia(ciudades.villaGesell())
		game.say(pepita, pepita.ciudad().nombre())
	}
	keyboard.b().onPressDo { pepita.volaHacia(ciudades.buenosAires()) }
	
	keyboard.up().onPressDo { pepita.move(pepita.posicion().up(1)) }
	keyboard.down().onPressDo { pepita.move(pepita.posicion().down(1)) }
	keyboard.left().onPressDo { pepita.move(pepita.posicion().left(1)) }
	keyboard.right().onPressDo { pepita.move(pepita.posicion().right(1)) }

	game.whenCollideDo(pepita, { algo => algo.llego(pepita) })	
	
//	START
	game.start()
}
